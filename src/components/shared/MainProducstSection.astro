---
import ButtonLink from "./ButtonLink.astro";
import ProductItem from "./ProductItem.astro";

interface Props {
  title: string;
  pt?: boolean;
}

const { title, pt = true } = Astro.props;
---

<section
  class={`w-full px-4 md:px-10 flex flex-col justify-center items-center ${pt ? "py-8" : ""}`}
>
  <h2
    class="text-4xl text-center font-bold mb-10 lg:text-5xl lg:mt-10 lg:mb-12"
  >
    {title}
  </h2>
  <div
    class="w-full flex overflow-x-scroll lg:overflow-x-hidden lg:grid lg:grid-cols-4 gap-4 mb-8"
  >
    <!-- <div class="w-full flex overflow-x-auto md:grid md:grid-cols-3 gap-4 mb-8"> -->
    <ProductItem />
    <ProductItem />
    <ProductItem />
    <ProductItem />
  </div>
  <ButtonLink text="Todos los productos" />
</section>
