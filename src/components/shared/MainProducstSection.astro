---
import ButtonLink from "./ButtonLink.astro";
import ProductItem from "./ProductItem.astro";

import { productsList } from "../../consts/productsList";

interface Props {
  title: string;
  pt?: boolean;
  stopViewTransition?: boolean;
  className?: string;
  activeButtonLink?: boolean;
}

const {
  title,
  pt = true,
  stopViewTransition = false,
  className,
  activeButtonLink = true,
} = Astro.props;
---

<section
  class={`w-full px-4 md:px-10 flex flex-col justify-center items-center ${pt ? "py-8" : ""} ${className}`}
>
  <h2
    class="text-4xl text-center font-bold mb-10 lg:text-5xl lg:mt-10 lg:mb-12"
  >
    {title}
  </h2>
  <div
    class="w-full flex overflow-x-scroll lg:overflow-x-hidden lg:grid lg:grid-cols-4 gap-4 mb-8"
  >
    {
      productsList
        .slice(0, 4)
        .map((product) => (
          <ProductItem
            product={product}
            stopViewTransaction={stopViewTransition}
          />
        ))
    }
  </div>
  {activeButtonLink && <ButtonLink text="Todos los productos" href="/shop"/>}
</section>
