---
import { Image } from "astro:assets";

import shirtBg from "../../../../public/products/shirts/shirt-bg.webp";

interface Props {
    className?: string;
}

const { className } = Astro.props;
---

<a href="#" class={`group category ${className}`}>
    <article
        class={`flex justify-between bg-white rounded-xl h-[150px] lg:h-[300px]`}
    >
        <div class="h-full md:w-[40%] py-4 px-5">
            <h3 class="font-semibold text-base md:text-lg">FRANELAS</h3>
        </div>
        <div class="w-full h-full overflow-hidden">
            <Image
                src={shirtBg}
                alt={""}
                class={" object-cover size-full group-hover:scale-110 transition ease-in-out duration-300 aspect-square"}
            />
            <!-- <img src={shirtBg.src} alt="" class="object-cover size-full"> -->
        </div>
    </article>
</a>
